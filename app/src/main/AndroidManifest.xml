<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moblieapp.pannawatnokket.findmycat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.moblieapp.pannawatnokket.findmycat.ApplicationFonts"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon_home"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/splash"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.HomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.ChooseUserActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.InputNewUserActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.HowToPlayActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.HighScoreActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.UserListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.SplashActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1776540265692506"
            android:exported="true" />

        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.ChooseScoreActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.moblieapp.pannawatnokket.findmycat.HighScoreGlobalActivity"
            android:screenOrientation="portrait" />

    </application>


</manifest>